@using EntityLayer.Concrete
@model List<Annoncement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Listesi</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Açıklama</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                            <th>Durum Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AnnouncementID</td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td>@item.Description</td>
                                <td><a href="/Annoncement/DeleteAnnoncement/@item.AnnouncementID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Annoncement/EditAnnoncement/@item.AnnouncementID" class="btn btn-outline-success">Güncelle</a></td>
                                @if (item.Status == true)
                                {
                                    <td><a href="/Annoncement/ChangeStatusToFalse/@item.AnnouncementID" class="btn btn-outline-secondary">Pasif Yap</a></td>
                                }
                                else
                                {
                                <td><a href="/Annoncement/ChangeStatusToTrue/@item.AnnouncementID" class="btn btn-outline-warning">Aktif Yap</a></td>
                                }
                            </tr>
                        }

                    </tbody>
                </table>
                <a href="/Annoncement/AddAnnoncement/" class="btn btn-outline-info">Yeni Duyuru Girişi</a>
            </div>
        </div>
    </div>
</div>
