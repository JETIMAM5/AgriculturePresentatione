@using EntityLayer.Concrete
@model List<Address>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Adres Listesi</h4>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Açıklama 1</th>
                            <th>Açıklama 2</th>
                            <th>Açıklama 3</th>
                            <th>Açıklama 4</th> 
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                                
                                <tr>
                                <td>@item.Description1</td>
                                <td>@item.Description2</td>
                                <td>@item.Description3</td>
                                <td>@item.Description4</td>
                                
                                <td><a href="/Address/EditAddress/@item.AddresID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                        }
                        @if (Model.Count == 0)
                        {
                            <div class="alert alert-danger">
                                <strong>UYARI!!!!</strong> VERİ TABANINIZDA PERSONEL KAYDI BULUNAMAMIŞTIR.....>
                            </div>
                            <div class="alert alert-info">
                                <strong>UYARI!!!!</strong> LÜTFEN PERSONEL GİRİŞİ YAPINIZ.........
                            </div>

                        }
                    </tbody>
                </table>
            </div>
            </br>
            <a href="/Team/AddTeam/" class="btn btn-outline-info">Yeni Personel Girişi</a>
        </div>
    </div>
</div>

